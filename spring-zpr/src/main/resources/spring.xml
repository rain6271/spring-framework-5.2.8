<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
	   http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context.xsd">
	<context:component-scan base-package="org.springframework.zpr.xml,org.springframework.zpr.cycle" use-default-filters="false">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Component"/>
	</context:component-scan>
	<bean id="propertyService" class="org.springframework.zpr.xml.PropertyService">
		<constructor-arg value="str1"/>
		<constructor-arg value="str2"/>
		<constructor-arg value="str3"/>
		<property name="property4" value="str4"/>
		<property name="property5" value="str5"/>
	</bean>
</beans>